<script>
// Giả sử bạn có một biểu tượng Zalo với class là 'zalo-icon'
// và mã QR với class là 'zalo-qr'

// Biến để theo dõi trạng thái hiển thị của mã QR
let isQrDisplayed = false;

document.querySelector('.zalo').addEventListener('click', function(event) {
  // Ngăn chặn hành vi mặc định của liên kết
  event.preventDefault();

  // Toggle trạng thái hiển thị của mã QR
  isQrDisplayed = !isQrDisplayed;
  document.querySelector('.zalo-qr').style.display = isQrDisplayed ? 'block' : 'none';
});

// Đảm bảo rằng mã QR ban đầu được ẩn
document.querySelector('.zalo-qr').style.display = 'none';

</script>
